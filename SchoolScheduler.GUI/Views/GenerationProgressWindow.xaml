<Window x:Class="SchoolScheduler.GUI.Views.GenerationProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Generazione Orario in Corso" Height="250" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Generazione orario in corso..." 
                  FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <ProgressBar Grid.Row="1" Name="progressBar" Height="25" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Name="txtPercentage" Text="0%" 
                  HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Name="txtStatus" Text="Inizializzazione..." 
                  HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBox Grid.Row="4" Name="txtLog" 
                IsReadOnly="True" 
                VerticalScrollBarVisibility="Auto"
                TextWrapping="Wrap"
                Background="#F5F5F5"
                FontFamily="Consolas"
                FontSize="10"
                Margin="0,0,0,10"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btnCancel" Content="Annulla" Width="100" Click="Cancel_Click"/>
            <Button Name="btnOK" Content="OK" Width="100" Margin="10,0,0,0" 
                   IsEnabled="False" Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>